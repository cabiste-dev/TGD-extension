{
    "manifest_version": 2,
    "name": "TGD",
    "version": "0.1.0",
    "description": "death to all gimmicks",
    "homepage_url": "https://github.com/cabiste69/DTG-extension",
    "icons": {
        "128": "./assets/images/icons/icon128.png",
        "96": "./assets/images/icons/icon96.png",
        "48": "./assets/images/icons/icon48.png",
        "38": "./assets/images/icons/icon38.png",
        "19": "./assets/images/icons/icon19.png",
        "16": "./assets/images/icons/icon16.png"
    },
    "browser_action": {
        "browser_style": true,
        "default_popup": "popup.html",
        "default_title": "mute all sell out gimmicks",
        "default_icon": {
            "38": "./assets/images/icons/icon38.png",
            "19": "./assets/images/icons/icon19.png",
            "16": "./assets/images/icons/icon16.png"
        }
    },
    "permissions": [
        "tabs",
        "cookies",
        "<all_urls>",
        "*://*.twitter.com/"
    ]
}